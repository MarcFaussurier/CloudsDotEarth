{
  "name": "helloworld",
  "displayName": "HelloCordova",
  "version": "1.0.0",
  "description": "A sample Apache Cordova application that responds to the deviceready event.",
  "main": "index.js",
  "scripts": {
    "build-assets": "webpack --config webpack.config.prod.js",
    "serve-assets": "webpack-dev-server --mode development --hot --inline --progress --config ./webpack.config.prod.js",
    "start": "cordova run electron --nobuild",
    "build-desktop-client": "cordova run electron"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "keywords": [
    "ecosystem:cordova"
  ],
  "author": "Apache Cordova Team",
  "license": "Apache-2.0",
  "dependencies": {
    "browserslist": "^4.3.7",
    "clean-webpack-plugin": "^1.0.0",
    "cordova-electron": "^1.0.2",
    "cordova-plugin-file": "^6.0.1",
    "express": "^4.17.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "glob": "^7.1.4",
    "html-webpack-plugin": "^3.2.0",
    "jquery": "^3.4.1",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-hot-loader": "^4.6.3",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.84.0",
    "sockjs-client": "^1.3.0",
    "tslint": "^5.16.0",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "uuid": "^3.3.2",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.3.2",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-dev-server": "^3.1.14",
    "webpack-hot-middleware": "2.18.2",
    "webpack-manifest-plugin": "^2.0.4"
  },
  "devDependencies": {
    "@types/jquery": "^3.3.29",
    "@types/node": "^12.0.3",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "copyfiles": "^1.2.0",
    "cross-env": "5.0.1",
    "css-loader": "^2.1.0",
    "file-loader": "^3.0.1",
    "json-loader": "^0.5.7",
    "node-sass": "^4.11.0",
    "raw-loader": "^1.0.0",
    "rimraf": "^2.6.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.0.1",
    "typescript": "^3.5.1",
    "url-loader": "^1.1.2"
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {},
      "cordova-plugin-file": {}
    },
    "platforms": [
      "electron"
    ]
  }
}